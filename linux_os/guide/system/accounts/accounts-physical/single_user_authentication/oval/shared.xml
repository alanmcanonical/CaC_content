      <criterion test_ref="test_single_user_auth" comment="authentication required for single user mode" />
    </criteria>
 </definition>
  <ind:textfilecontent54_test check="all" check_existence="none_exist" id="test_single_user_auth" version="1" comment="authentication required for single user mode">
    <ind:object object_ref="obj_single_user_auth" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_single_user_auth" version="1">
    <ind:filepath datatype="string">/etc/shadow</ind:filepath>
    <ind:pattern operation="pattern match" datatype="string">^root:[*\!]:</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
