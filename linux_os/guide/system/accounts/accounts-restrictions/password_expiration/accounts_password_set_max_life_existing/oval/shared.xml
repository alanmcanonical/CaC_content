<def-group>
  <definition class="compliance" id="{{{ rule_id }}}" version="3">
    {{{ oval_metadata("all users' passwords maximum days should meet requirements.") }}}
    <criteria comment="all users with a password should have their maximum days between password change set">
      <criterion test_ref="test_pass_max_life_existing" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="any_exist" id="test_pass_max_life_existing" version="1" comment="all users with a password have their maximum days between password change set to 365 or less">
    <ind:object object_ref="obj_pass_max_life_existing" />
    <ind:state state_ref="state_pass_max_life_existing" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="obj_pass_max_life_existing" version="1">
    <ind:filepath datatype="string">/etc/shadow</ind:filepath>
    <ind:pattern operation="pattern match" datatype="string">^.+:[^\*!\n].+:\d*:\d*:(\d+):\d*:\d*:\d*:$</ind:pattern>
    <ind:instance operation="greater than or equal" datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_state id="state_pass_max_life_existing" version="1">
    <ind:subexpression operation="less than or equal" datatype="int" var_ref="var_accounts_password_set_max_life_existing" />
  </ind:textfilecontent54_state>

  <external_variable comment="Maximum password age" datatype="int" id="var_accounts_password_set_max_life_existing" version="1" />
</def-group>
