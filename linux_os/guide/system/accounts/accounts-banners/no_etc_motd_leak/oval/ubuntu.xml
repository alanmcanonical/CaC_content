<def-group>
  <definition class="compliance" id="{{{ rule_id }}}" version="1">
    {{{ oval_metadata("The contents of the /etc/motd file are displayed to users after login and function as a message of the day for authenticated users.") }}}
    <criteria>
      <criterion test_ref="tst_etc_motd_no_forbidden_escapes" negate="true" comment="/etc/motd does not contain \v, \r, \m, \s options specified or does not exist" />
      <criterion test_ref="tst_etc_motd_no_os_release_id" negate="true" comment="/etc/motd does not contain the ID value from /etc/os-release or does not exist" />
    </criteria>
 </definition>
 <ind:textfilecontent54_object id="obj_etc_motd_forbidden_escapes" version="1">
    <ind:filepath datatype="string">/etc/motd</ind:filepath>
    <ind:pattern operation="pattern match" datatype="string">((\\v)|(\\r)|(\\m)|(\\s))</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
  <ind:textfilecontent54_object id="obj_etc_motd_all_content" version="1">
    <ind:filepath datatype="string">/etc/motd</ind:filepath>
    <ind:pattern operation="pattern match" datatype="string">.*</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
  <ind:textfilecontent54_object id="obj_etc_os_release_id_for_etc_motd" version="1">
    <ind:filepath datatype="string">/etc/os-release</ind:filepath>
    <ind:pattern operation="pattern match" datatype="string">^ID=["]?([\w-_.]+)["]?\s*$</ind:pattern>
    <ind:instance operation="greater than or equal" datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
  <ind:textfilecontent54_state id="ste_etc_motd_matches_os_release_id" version="1">
    <ind:text operation="pattern match" datatype="string" var_ref="var_combined_etc_os_release_id" var_check="at least one" />
  </ind:textfilecontent54_state>
  <ind:textfilecontent54_test check="at least one" id="tst_etc_motd_no_forbidden_escapes" version="1" comment="/etc/motd exists and has \v, \r, \m, or \s options specified">
    <ind:object object_ref="obj_etc_motd_forbidden_escapes" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_test check="at least one" id="tst_etc_motd_no_os_release_id" version="1" comment="/etc/motd exists and contains the ID value from /etc/os-release">
    <ind:object object_ref="obj_etc_motd_all_content" />
    <ind:state state_ref="ste_etc_motd_matches_os_release_id" />
  </ind:textfilecontent54_test>
  <local_variable datatype="string" id="var_combined_etc_os_release_id" version="1" comment="ID value from /etc/os-release">
    <concat>
      <literal_component datatype="string">(?i)</literal_component>
      <object_component item_field="subexpression" object_ref="obj_etc_os_release_id_for_etc_motd" />
    </concat>
  </local_variable>
</def-group>
