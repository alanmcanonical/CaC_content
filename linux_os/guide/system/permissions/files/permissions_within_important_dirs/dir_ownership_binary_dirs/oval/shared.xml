<def-group>
  <definition class="compliance" id="dir_ownership_binary_dirs" version="1">
    {{{ oval_metadata("
    Checks that /bin /sbin /usr/bin /usr/sbin /usr/local/bin
    /usr/local/sbin directories therein, are owned by root.
    ") }}}
    <criteria operator="AND">
      <criterion test_ref="test_dir_ownership_bin_dir" />
    </criteria>
  </definition>

  <unix:file_test  check="all" check_existence="none_exist" comment="library directories uid root" id="test_dir_ownership_bin_dir" version="1">
    <unix:object object_ref="object_dir_ownership_bin_dir" />
  </unix:file_test>

  <unix:file_object comment="binary directories" id="object_dir_ownership_bin_dir" version="1">
    <!-- Check that /bin /sbin /usr/bin /usr/sbin /usr/local/bin
         /usr/local/sbin directories belong to user with uid 0 (root) -->
    <unix:path operation="pattern match">^\/(|s)bin|^\/usr\/(|local\/)(|s)bin</unix:path>
    <unix:filename xsi:nil="true" />
    <filter action="include">state_owner_binary_dirs_not_root</filter>
  </unix:file_object>

  <unix:file_state id="state_owner_binary_dirs_not_root" version="1">
    <unix:user_id datatype="int" operation="not equal">0</unix:user_id>
  </unix:file_state>

</def-group>
