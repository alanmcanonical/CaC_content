<def-group>
  <definition class="compliance" id="dir_permissions_binary_dirs" version="2">
    {{{ oval_metadata("
        Checks that binary files under /bin, /sbin, /usr/bin, /usr/sbin,
        /usr/local/bin, and /usr/local/sbin are not group-writable or world-writable.
      ") }}}
    <criteria operator="AND">
      <criterion test_ref="test_perms_binary_dirs" />
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist" comment="binary files go-w" id="test_perms_binary_dirs" version="1">
    <unix:object object_ref="object_dir_permissions_binary_dirs" />
  </unix:file_test>

  <unix:file_object comment="binary files" id="object_dir_permissions_binary_dirs" version="1">
    <!-- Check that binary files under /bin, /sbin, /usr/bin, /usr/sbin, /usr/local/bin,
         and /usr/local/sbin have safe permissions (go-w) -->
    <unix:path operation="pattern match">^\/(|s)bin|^\/usr\/(|local\/)(|s)bin</unix:path>
    <unix:filename xsi:nil="true" />
    <filter action="include">state_perms_binary_dirs_nogroupwrite_noworldwrite</filter>
    <filter action="exclude">state_perms_binary_dirs_symlink</filter>
  </unix:file_object>

  <unix:file_state id="state_perms_binary_dirs_nogroupwrite_noworldwrite" version="1" operator="OR">
    <unix:gwrite datatype="boolean">true</unix:gwrite>
    <unix:owrite datatype="boolean">true</unix:owrite>
  </unix:file_state>

  <unix:file_state id="state_perms_binary_dirs_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

</def-group>
