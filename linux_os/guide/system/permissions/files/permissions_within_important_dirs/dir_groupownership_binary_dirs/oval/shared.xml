<def-group>
  <definition class="compliance" id="dir_groupownership_binary_dirs" version="1">
    {{{ oval_metadata("
    Checks that system commands directories /bin /sbin /usr/bin /usr/sbin /usr/local/bin
    /usr/local/sbin are owned by root group.
    ") }}}
    <criteria >
      <criterion test_ref="test_groupownership_binary_dirs" />
    </criteria>
  </definition>

  <unix:file_test  check="all" check_existence="none_exist" comment="system commands are owned by root" id="test_groupownership_binary_dirs" version="1">
    <unix:object object_ref="object_groupownership_binary_dirs" />
  </unix:file_test>

  <unix:file_object comment="binary directories" id="object_groupownership_binary_dirs" version="1">
    <!-- Check that system binaries within directories /bin /sbin /usr/bin /usr/sbin /usr/local/bin /usr/local/sbin 
         belong to group with gid 0 (root) -->
    <unix:path operation="pattern match">^\/s?bin|^\/usr\/s?bin|^\/usr\/local\/s?bin</unix:path>
    <unix:filename operation="pattern match">^.*$</unix:filename>
   <filter action="include">state_groupowner_binary_dirs_not_root</filter>
  </unix:file_object>

  <unix:file_state id="state_groupowner_binary_dirs_not_root" version="1">
    <unix:group_id datatype="int" operation="not equal">0</unix:group_id>
  </unix:file_state>

</def-group>
