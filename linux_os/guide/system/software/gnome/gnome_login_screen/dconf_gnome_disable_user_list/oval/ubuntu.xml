<def-group>
  <definition class="compliance" id="dconf_gnome_disable_user_list" version="1">
    {{{ oval_metadata("Disable the GNOME3 GUI listing of all known users on the login screen.") }}}
    <criteria operator="OR">
      <extend_definition comment="gdm installed" definition_ref="package_gdm_installed" negate="true" />
      <criterion comment="Disable user list" test_ref="test_disable_user_list" />
      <criterion comment="Disable user list on GDM3" test_ref="test_disable_user_list_gdm3" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="all_exist"
  comment="GUI user list is disabled"
  id="test_disable_user_list" version="1">
    <ind:object object_ref="obj_disable_user_list" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_disable_user_list"
  version="1">
    <ind:path>/etc/dconf/db/{{{ dconf_gdm_dir }}}/</ind:path>
    <ind:filename operation="pattern match">^.*$</ind:filename>
    <ind:pattern operation="pattern match">^\[org/gnome/login-screen]([^\n]*\n+)+?disable-user-list=true$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_test check="all" check_existence="all_exist"
  comment="GUI user list is disabled on GDM3"
  id="test_disable_user_list_gdm3" version="1">
    <ind:object object_ref="obj_disable_user_list_gdm3" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_disable_user_list_gdm3"
  version="1">
    <ind:filepath>/etc/gdm3/greeter.dconf-defaults</ind:filepath>
    <ind:pattern operation="pattern match">^\[org/gnome/login-screen]([^\n]*\n+)+?disable-user-list=true$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
